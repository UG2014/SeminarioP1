    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="com.example.tarea2.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tarea2.activities.MarketDetailActivity"
            android:label="@string/title_activity_country_detail" >
        </activity>
            <activity
            android:name="com.example.tarea2.activities.InfoTiendasActivity"
            android:label="@string/title_activity_info_tiendas" >
        </activity>
        <activity
            android:name="com.example.tarea2.activities.ComentesMarketActivity"
            android:label="@string/title_activity_comentes_market" >
        </activity>
    </application>

</manifest>
